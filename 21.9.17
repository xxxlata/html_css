.background_top{
  background-color: peachpuff;
  height: 120px;
  width: 600px;
  margin-top: 0.3px;
  padding: 0.3px;
}
.bar {
  display: flex;
  justify-content: space-between;
  background-color:peachpuff;
  margin:30px;
}

.search{
  display: flex;
  justify-content: center;
  
}
.ninja_one {
  background-color: peachpuff;
  height: 15px;
  width: 250px;
}
.ninja_two {
background-color: peachpuff;
  height: 15px;
  width: 200px;  
}

.main_book{
  height: 300px;
  width: 260px;
  border-radius: 20px;
}
.main_title {
  position: relative;
  
}
.main_coment{
  position: absolute;
  font-size: 32px;
  top: -300px;
  right: 120px;
}
.main_coment_two {
  position: absolute;
  top: -250px;
  right: 70px;
  color: rgba(0, 0, 0, 0.3);
}
.stars{
  color: rgb(255, 208, 0); 
  position: absolute;
  right: 180px;
  top: -220px;
}
.brain{
  position: absolute;
  right: 140px;
  top: -180px;
  background-color: rgba(0, 0, 0, 0.1);
  margin-bottom: 10px;
  border-radius: 20px;
  width: 60px;
}
.healthy {
   position: absolute;
  right: 220px;
  top: -180px;
  background-color: rgba(0, 0, 0, 0.1);
  margin-bottom: 10px;
  border-radius: 20px;
  width: 80px;
}
.bookmark{
 position: absolute;
  right: 270px;
  top: -100px;
  background-color: rgba(0, 0, 0, 0.1);
  margin-bottom: 10px;
  border-radius: 50px;
  width: 30px;
  height: 30px;
  background-color:rgb(255, 208, 0); 
}
.booknow{
 position: absolute;
  right: 100px;
  top: -100px;
  background-color: black;
  margin-bottom: 10px;
  border-radius: 5px;
  width: 120px;
  height: 40px;
  font-size: 20px;
  font-weight: bold;
  color: white;
}
.horror_books{
  display: flex;
}
.horror_books :first-child{
 height: 200px;
  width: 150px;
  border-radius: 20px; 
  margin-right: 15px;
}
.stars_horror_container{
  display:flex;
  justify-content: space-around;
}
.stars_horror_container :first-child{
  margin-right:10px; 
}
.stars_horror_container :nth-child(2){
  margin-right: -10px;
}
.populer_cat{
   height: 300px;
  width: 260px;
  border-radius: 20px; 
}
.populer_coment {
 position: relative; 
}
h2{
  position: absolute;
  top: -300px;
  right: 20px;
}
span {
  position: absolute;
  top: -200px;
  right: 0px;
  white-space:pre-line;
  color: rgba(0, 0, 0, 0.3);
  font-size: 20px;
}
